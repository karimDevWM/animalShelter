{% extends 'base.html.twig' %}

{% block title %}Refuge index{% endblock %}

{% block body %}
    <h1>Refuge index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Cp</th>
                <th>Ville</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for refuge in refuges %}
            <tr>
                <td>{{ refuge.id }}</td>
                <td>{{ refuge.nom }}</td>
                <td>{{ refuge.adresse }}</td>
                <td>{{ refuge.cp }}</td>
                <td>{{ refuge.ville }}</td>
                <td>{{ refuge.email }}</td>
                <td>
                    <a href="{{ path('app_refuge_show', {'id': refuge.id}) }}">show</a>
                    <a href="{{ path('app_refuge_edit', {'id': refuge.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_refuge_new') }}">Create new</a>
{% endblock %}
